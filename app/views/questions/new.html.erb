<h2>Новый вопрос</h2>

<%# так можно добвлять комментарии! %>
<form action="/questions" method="POST">
  <%# for="question[body]" - для переноса фокуса на body %>
  <p><label for="question[body]">Текст вопроса</label></p>
  <p><textarea name="question[body]" rows=5> </textarea></p>
  <p><label for="question[user_id]">User id</label></p>
  <p><input type="number" name = "question[user_id]"></p>
  <p><input type="submit" value = "Создать"></p>
</form>

<%= form_with model: @question do |form|%>
<p><%= form.label :body, 'Текст вопроса' %></p>
<p><%= form.text_area :body, rows: 5%></p>
<p><%= form.label :user_id %></p>
<p><%= form.text_field :user_id %></p>
<p><%= form.submit "Создать" %></p>
  <%end%>