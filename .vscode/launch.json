  "version": "0.2.0",
  "configurations": [
    {
      "type": "rdbg",
      "name": "Rails server with rdbg",
      "request": "launch",
      "script": "${workspaceRoot}/bin/rails s",
      "useBundler": false,
      "command": "ruby"
    }, 
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
       "args": [
          "server"
      ]
    },
    {
      "type": "rdbg",
      "name": "Debug current file with rdbg",
      "request": "launch",
      "script": "${file}",
      "args": [],
      "askParameters": true
    },
    {
      "type": "rdbg",
      "name": "Attach with rdbg",
      "request": "attach"
    }
]
}